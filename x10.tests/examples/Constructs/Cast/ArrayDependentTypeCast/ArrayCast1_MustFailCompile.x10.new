import harness.x10Test;;
import x10.regionarray.Array;

/**
 * Purpose: Checks cast's code statically detects constraints are not meet.
 * Issue: Rank constraint is not meet.
 * (int[:rank==2&&zeroBased]) <-- (int[:rank==1&&zeroBased])
 * @author vcave
 **/
public class ArrayCast1_MustFailCompile extends x10Test {

	public def run(): boolean = {
		var rank1Zero: region{rank==1&&zeroBased} = (region{rank==1&&zeroBased})) region.factory.region(0, 10);
		
		var d1: dist{rank==1&&zeroBased} = (dist{rank==1&&zeroBased})) rank1Zero->here;

		var ia: Array[int]{rank==2&&zeroBased} = (Array[int]{rank==2&&zeroBased}) new Array[int](d1);
		
		return true;
	}

	public static def main(var args: Array[String](1)): void = {
		new ArrayCast1_MustFailCompile().execute();
	}

}
